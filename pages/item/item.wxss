.background {
	position: fixed;
	top:0;
	left:0;
	width:100%;
	height:100%;
	opacity:0.2;
	filter: blur(10px);
	z-index:-1;
}
.img {
	width:100%;
	height: 100%;
}
.meta {
	width: 80%;
	padding-left: 10%;
	/*padding: 50rpx 40rpx;*/
	font-size:0;
}
.poster{
	width: 100%;
	height: 600rpx;
	margin: 20rpx 0;
}
.title{
	display: block;
	text-align: center;
	margin-bottom: 10rpx;
	font-size: 30rpx;
}
.info {
	display: inline-block;
	width:80%;
	color:#9A9999;
	font-size: 25rpx;
	margin: 10rpx 20rpx;
}
.summary {
	width: 80%;
	padding: 40rpx 10%;
}
.label{
	display: inline-block;
	width: 100%;
	color: #000;
	font-size: 30rpx;
	margin-bottom: 15rpx;
}
.content {
	margin-top: 5rpx;
	line-height: 30rpx;
	font-size: 25rpx;
	color:#5B5B5B;
}
