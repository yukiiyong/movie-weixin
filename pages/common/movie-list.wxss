.list{
	width: 100%;
	height: 100%;
}
.item {
	display: flex;
	margin: 0 20rpx;
	padding: 20rpx 40rpx;
	border-bottom: 1px solid #ccc;
	cursor: pointer;
	overflow: hidden;
}
.poster {
	flex-basis: 128rpx;
	width: 128rpx;
	height: 140rpx;
	margin-right: 20rpx;
}
.meta{
	flex: 1;
	min-width: 0;
	overflow: hidden;
	margin-right: 20rpx;
}
.title, .sub-title {
	display: block;
	margin-bottom: 10rpx;
}
.title {
	font-size: 28rpx;
	font-weight: bold;
}
.sub-title {
	font-size: 24rpx;
	color: #c0c0c0;
}
.artists {
	font-size: 22rpx;
	color: #999;
}
.rating {
	flex-basis: 40rpx;
}
.rating text {
	display: inline-block;
	width: 40rpx;
	background-color: #800002;
	color: #fff;
	font-size: 24rpx;
	border-radius: 8rpx;
	font-weight: bold;
	text-align:center;
	padding: 10rpx;
}
.tips {
	display: flex;
	justify-content: center;
}
.tips view{
	display: flex;
	justify-content: center;
	align-items: center;
	margin: 40rpx;
	color: #ccc;
}
.tips image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}
.tips text {
	flex: 1;
	font-size: 30rpx;
	line-height: 30rpx;
}