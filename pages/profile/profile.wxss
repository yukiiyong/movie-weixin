page {
  height: 100%;
}
.infoWrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 400rpx;
  background-color: rgba(0,0,0,0.1);
}
.img {
  display:  inline-block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.name {
  display: inline-block;
  font-size: 40rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.desc {
  display: inline-block;
  font-size: 30rpx;
  color: #666;
}
.authBtn {
  height: 80rpx;
  font-size: 40rpx;
  color: #fff;
  line-height: 80rpx;
  text-align:center;
  border: 1;
  border-color: #666;
  border-radius: 40rpx;
  background-color: rgba(0,0,0,0.3);
}
.item {
  height: 44rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 5rpx;
  padding: 20rpx;
  /*border-bottom: 1px solid #999; */
}
.item-hd {
  font-size: 30rpx;
  color: #333;
}
.item-icon {
  font-size: 40rpx;
  color: #333;
}