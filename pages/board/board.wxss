page{
	height:100%;
}
.slider{
	width:100%;
	height: 480rpx;
}
.slider-item {
	width: 100%;
}
.slider image {
	width:100%;
	height:100%;
}
.board{
	width: 100%;
	background-color: #f6f6f6;
}
.board-item{
	background:#fff;
	margin-top: 20rpx;
	padding: 20rpx;
	font-size: 30rpx;
	cursor:pointer;
}
.board-item .title{
	display: flex;
	height: 30rpx;
	line-height: 30rpx;
	justify-content: space-between;
}
.board-item-icon {
	font-size: 30rpx;
	color: #666;
}
.board-content {
	height: 320rpx;
}
.inner {
	width: 900rpx;
	height:100%;
	display: flex;
	flex-direction: row;
}
.movie-item {
	display: flex;
	flex-direction: column;
	width: 180rpx;
	margin: 10rpx;
}
.board-content-image {
	width: 180rpx;
	height: 250rpx;
	margin-bottom: 16rpx;
}
.board-content-text {	
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	text-align: center;
}